.profile-about-container
  p.description {{profileVm.profile.description}}

  .tags
    .tag(ng-repeat="track in (profileVm.profile.tracks | displayTracks)")
      | {{track}} 

  hr

  tc-section(state="profileVm.status.stats")
    .horizontal-stats
      .stat
        .value {{profileVm.numProjects}}

        .name Projects

      .stat
        .value
          | {{profileVm.numWins}}
          | ({{profileVm.numWins / profileVm.numProjects | percentage}})

        .name Wins

    .categories
      .leftButton(
        ng-click="vm.shiftCategories(-1)",
        ng-show="vm.categoryIndex > 0"
      ) &#9664;

      .category(
        ng-repeat="category in profileVm.categories.slice(vm.categoryIndex, vm.categoryIndex + 4)", 
        ui-sref="profile.develop({track: category.track, subTrack: category.subTrack})"
      )
        .name {{category.track}}

        .subcategory(ng-show="category.subTrack") {{category.subTrack}}

        .icon

        .ranking
          .number {{category.rank | ordinal}}

          .tag Ranking

      .rightButton(
        ng-click="vm.shiftCategories(1)",
        ng-show="vm.categoryIndex < vm.categories.length - 4"
      ) &#9654;

  hr

  tc-section(state="profileVm.status.skills")
    .skills(ng-show="profileVm.skills && profileVm.skills.length > 0")
      h1 Skills / Technologies


      .list
        .leftButton(
          ng-click="vm.shiftSkills(-1)",
          ng-show="vm.skillIndex > 0"
        ) &#9664;

        .skill(ng-repeat="skill in profileVm.skills.slice(vm.skillIndex, vm.skillIndex + 5)")
          skill-tile(skill="skill")

        .rightButton(
          ng-click="vm.shiftSkills(1)",
          ng-show="vm.skillIndex < vm.skills.length - 5"
        ) &#9654;


  hr

  tc-section(state="profileVm.status.externalLinks")
    .links
      h1 External Links
      .list
        .link(ng-repeat="link in vm.mockProfile.links")
          h2 {{link.name}}

          ul.properties
            li.property(ng-repeat="property in link.properties")
              .key {{property.name}}

              .value {{property.value}}

          .logo
            img(ng-src="images/{{link.logo}}")
